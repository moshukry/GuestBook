@model GuestBook.Models.Message

@{
    ViewData["Title"] = "Details";
}

<h2>Message Details</h2>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Sender
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        <dt class = "col-sm-2">
            Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MessageTime)
        </dd>
        <dt class = "col-sm-2">
            Message
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MessageBody)
        </dd>
        <dt class = "col-sm-2">
            Replies
        </dt>
            @foreach (var item in Model.Replies)
            {
                <dd class = "col-sm-10"><div class="d-inline-block"> @item.ReplyBody </div> </dd>
            }
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.MessageId">Edit</a> 
    <a class="btn btn-outline-info" asp-action="Index">Back to Messages</a>
</div>
